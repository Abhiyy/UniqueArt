@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            @Html.Partial("_PartialCategoriesMenu")
        </div>
        <div class="col-md-9">
            @Html.Partial("_PartialSlider")
        </div>
    </div>
    
    <div class="col-md-12">
        <hr />
        <h1 class="text-center text-uppercase">Fresh Arrivals</h1>
       @Html.Partial("_PartialFreshArrivals")
        
    </div>
    <div class="col-md-12">
        <hr />
        <h1 class="text-center">STORE OFFERS</h1>
        @Html.Partial("_PartialStoreOffers")
    </div>
    <div class="col-md-12">
        <hr />
        <h1 class="text-center">RECOMMENDED PRODUCTS</h1>
        @Html.Partial("_PartialRecommendedProducts")
    </div>

    <div class="col-md-12">
        <hr />
        <div class="col-md-8">
            @Html.Partial("_PartialOfflineProducts")
        </div>
        <div class="col-md-4 leftBorder">
            @Html.Partial("_PartialCustomizationRequestForm")
        </div>
    </div>

</div>
